
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Aseg√∫rate de tener esta variable en tu archivo .env
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
